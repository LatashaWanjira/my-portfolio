<% content_for(:title, "Project | Personal Portfolio") %>

<div class="project">
	<h1><%= @project.project_name %></h1>
	<p><%= @project.link %></p>
	<p><%= @project.description %></p>
</div>

<% if user_signed_in? %>
	<%= link_to "Edit Project", edit_project_path%>
	<%= link_to "Delete Project", project_path(@project), :data => {:confirm => "Are you sure?", :method => "delete"} %>
<% end %>


